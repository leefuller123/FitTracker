<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fittracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitTracker">
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".WorkoutActivity" />
        <activity android:name=".WorkoutPlansActivity" />
        <activity android:name=".ViewWorkoutPlanActivity" />
        <activity android:name=".MealPlannerActivity" />
        <activity android:name=".CreateRecipeActivity" />
        <activity android:name=".ViewRecipeActivity" />
        <activity android:name=".HydrationActivity" />
        <activity android:name=".BMIActivity" />
        <activity android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
